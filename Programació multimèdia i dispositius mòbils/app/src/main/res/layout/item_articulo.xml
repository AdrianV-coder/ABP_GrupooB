<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewArticulo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewArticuloImagen1"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imgArticulo1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTituloArticulo1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/dark_grey"
                android:text="Libro de Odoo"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cardViewArticuloImagen1"
                app:layout_constraintStart_toStartOf="@+id/cardViewArticuloImagen1"/>

            <TextView
                android:id="@+id/tvPrecioArticulo1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/dark_grey"
                android:textStyle="bold"
                android:text="15€"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTituloArticulo1"
                app:layout_constraintStart_toStartOf="@+id/cardViewArticuloImagen1"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewArticulo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewArticuloImagen2"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imgArticulo2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTituloArticulo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/dark_grey"
                android:text="Libro de Odoo"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cardViewArticuloImagen2"
                app:layout_constraintStart_toStartOf="@+id/cardViewArticuloImagen2"/>

            <TextView
                android:id="@+id/tvPrecioArticulo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/dark_grey"
                android:textStyle="bold"
                android:text="15€"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTituloArticulo2"
                app:layout_constraintStart_toStartOf="@+id/cardViewArticuloImagen2"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>