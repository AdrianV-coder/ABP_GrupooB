<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/light_grey"
    tools:context=".activities.RegistrationActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/custom_text"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/green"/>

            <EditText
                android:id="@+id/etRegisterName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_text"
                android:drawableLeft="@drawable/ic_me"
                android:drawablePadding="8dp"
                android:hint="Name"
                android:textColor="@color/dark_grey"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="34dp"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/etRegisterSurnames"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_text"
                android:drawableLeft="@drawable/ic_surnames"
                android:drawablePadding="8dp"
                android:hint="Surnames"
                android:textColor="@color/dark_grey"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="18dp"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/etRegistarLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_text"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:hint="Location"
                android:textColor="@color/dark_grey"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="18dp"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/etRegisterEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_text"
                android:drawableLeft="@drawable/ic_mailbox"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:textColor="@color/dark_grey"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="18dp"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/etRegisterPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_text"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/dark_grey"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="18dp"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/etRegisterConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_text"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="8dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="@color/dark_grey"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="18dp"
                android:padding="8dp"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Registrate"
                android:textSize="18sp"
                android:layout_marginTop="26dp"
                android:backgroundTint="@color/green"
                app:cornerRadius="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtChangeToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Ya tienes una cuenta? Logeate aquí."
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:padding="8dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>